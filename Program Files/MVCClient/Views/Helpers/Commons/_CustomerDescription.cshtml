@model MVCClient.ViewModels.Helpers.ICustomerAutoCompleteViewModel

@Html.HiddenFor(model => model.CustomerBirthday)
@Html.HiddenFor(model => model.CustomerTelephone)
@Html.HiddenFor(model => model.CustomerAddressNo)
@Html.HiddenFor(model => model.CustomerEntireTerritoryEntireName)


<div class="div-row3">
    <div class="div-input" style="margin-left: 0px; margin-top: 4px;">           
        @{string birthday = Model.CustomerBirthday != null && Model.CustomerBirthday.Value.Year > 1900? Model.CustomerBirthday.Value.ToShortDateString(): "";}

        <a href="javascript:void(0)" style="margin-left: 46px; color:black;"><img id="img-birthday" src="~/Content/Images/New/BirthdayIcon.png" title="Ngày sinh" /> <label id="label-birthday" class="label-description" style="width:70px;">@birthday</label></a>
        <a href="javascript:void(0)" style="margin-left: 2px; color:black;"><img id="img-telephone" src="~/Content/Images/New/Telephone.png" title="Điện thoại" /> <label id="label-telephone" class="label-description">@Model.CustomerTelephone</label></a>        
        
        @Html.ValidationMessageFor(model => model.CustomerName, "", new { @class = "text-danger" })
    </div>
</div>
<div class="div-row2">
    <label id="TerritoriesDescriptions" class="label-description">@Model.CustomerAddressNo, @Model.CustomerEntireTerritoryEntireName</label>
</div>


