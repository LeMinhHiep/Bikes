@model MVCClient.ViewModels.Helpers.ICustomerCategoryDropDownViewModel

<div class="div-row">
    <div class="form-group1">
        @Html.LabelFor(model => model.CustomerCategoryID, htmlAttributes: new { @class = "control-label1" })
        <div class="div-input">
            @Html.Kendo().DropDownListFor(m => m.CustomerCategoryID).BindTo(Model.CustomerCategoryDropDown).HtmlAttributes(new { @class = "input-class1" })
         </div>
        <div class="div-validation-message">
            @Html.ValidationMessageFor(model => model.CustomerCategoryID, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

