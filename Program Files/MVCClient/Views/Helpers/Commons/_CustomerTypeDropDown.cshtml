@model MVCClient.ViewModels.Helpers.ICustomerTypeDropDownViewModel

<div class="div-row">   
        @Html.LabelFor(model => model.CustomerTypeID, htmlAttributes: new { @class = "control-label1" })
        <div class="div-input">
            @Html.Kendo().DropDownListFor(m => m.CustomerTypeID).BindTo(Model.CustomerTypeDropDown).HtmlAttributes(new { @class = "input-class1" })
            </div>
        <div class="div-validation-message">
            @Html.ValidationMessageFor(model => model.CustomerTypeID, "", new { @class = "text-danger" })
        </div>    
</div>